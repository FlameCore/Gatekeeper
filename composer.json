{
    "name": "flamecore/gatekeeper",
    "description": "Prevent spammers from ever reading your site",
    "homepage": "http://www.flamecore.org",
    "keywords": ["security", "antispam"],
    "license": "ISC",
    "authors": [
        {
            "name": "Christian Neff",
            "email": "christian.neff@gmail.com",
            "homepage": "http://www.secondtruth.de",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/FlameCore/Gatekeeper/issues",
        "wiki": "https://github.com/FlameCore/Gatekeeper/wiki"
    },
    "require": {
        "php": ">=5.4",
        "symfony/http-foundation": "2.6.*",
        "flamecore/webtools": "1.2.*",
        "psr/log": "~1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "4.5.*",
        "scrutinizer/ocular": "~1.1"
    },
    "autoload": {
        "psr-4": {
            "FlameCore\\Gatekeeper\\": "lib/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FlameCore\\Gatekeeper\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit"
    }
}
